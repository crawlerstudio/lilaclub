<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="2.5"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" >

    <servlet>
        <servlet-name>info</servlet-name>
        <servlet-class>com.makerx.lilac.servlet.ShowUserInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>save</servlet-name>
        <servlet-class>com.makerx.lilac.servlet.SaveUserInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>save</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>show</servlet-name>
        <servlet-class>com.makerx.lilac.servlet.RedirectShowPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>show</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>com.makerx.lilac.servlet.InitServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>init</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>

</web-app>